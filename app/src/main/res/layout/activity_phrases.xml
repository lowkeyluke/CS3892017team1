<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackgroundb"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jacksonhoang.citygoer.MainActivity">

    <Button
        android:id="@+id/translate"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#95E6E3E3"
        android:onClick="phraseSelection"
        android:text="Translation"
        android:textColor="#2C3539"
        android:textSize="20dp"
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/helloBye"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/helloBye"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#95E6E3E3"
        android:onClick="phraseSelection"
        android:text="Hello, Goodbye"
        android:textColor="#2C3539"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/etiquette"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/etiquette"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#95E6E3E3"
        android:onClick="phraseSelection"
        android:text="Etiquette"
        android:textColor="#2C3539"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/help"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etiquette"
        android:background="#95E6E3E3"
        android:onClick="phraseSelection"
        android:text="Help"
        android:textColor="#2C3539"
        android:textSize="20dp" />

    <Button
        android:id="@+id/random"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#95E6E3E3"
        android:onClick="phraseSelection"
        android:text="Randomizer"
        android:textColor="#2C3539"
        android:textSize="20dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/help"
        android:layout_alignParentStart="true" />

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"
        />


</RelativeLayout>
